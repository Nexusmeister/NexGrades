<Page x:Class="NexGrades.App.Pages.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NexGrades.App.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance local:StudentPage, IsDesignTimeCreatable=False}"
      Title="StudentPage">

    <StackPanel>
        <ui:TextBox ClearButtonEnabled="True" PlaceholderText="FirstName" PlaceholderEnabled="True" Text="{Binding ViewModel.Student.FirstName}"></ui:TextBox>
        <ui:TextBox ClearButtonEnabled="True" Text="{Binding ViewModel.Student.Name}"></ui:TextBox>
    </StackPanel>
</Page>
