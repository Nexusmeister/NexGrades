<Page x:Class="NexGrades.App.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NexGrades.App.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:NexGrades.App.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewModels:SettingsViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Speicherort" Margin="10,5,5,0"/>
            <ui:Button Content="Select Folder"/>
        </StackPanel>
    </StackPanel>
</Page>
