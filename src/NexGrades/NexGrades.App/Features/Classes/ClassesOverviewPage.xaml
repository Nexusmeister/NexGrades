<Page x:Class="NexGrades.App.Features.Classes.ClassesOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:classes="clr-namespace:NexGrades.App.Features.Classes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance classes:ClassesOverviewPage, IsDesignTimeCreatable=False}"
      Title="ClassesOverviewPage">

    <interactivity:Interaction.Triggers>
        <interactivity:EventTrigger EventName="Loaded">
            <interactivity:InvokeCommandAction Command="{Binding ViewModel.LoadClassesCommand}"/>
        </interactivity:EventTrigger>
    </interactivity:Interaction.Triggers>

        <StackPanel Orientation="Vertical">
        <ui:TextBlock 
            Text="Classes" 
            Appearance="Secondary"
            FontTypography="Title" 
            Margin="5,0,0,0"></ui:TextBlock>
        <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
            <ui:Button Margin="0,0,5,0" Content="AddClass" Icon="{ui:SymbolIcon AddCircle32}" Command="{Binding ViewModel.AddClassCommand}"/>
            <ui:Button Margin="0,0,5,0" Content="EditClass" Icon="{ui:SymbolIcon Edit32}"/>
            <ui:Button Margin="0,0,5,0" Content="RemoveClass" Icon="{ui:SymbolIcon SubtractCircle32}"/>
        </StackPanel>
        <!--<ui:DropDownButton Content="Hello" Icon="{ui:SymbolIcon Fluent24}">
            <ui:DropDownButton.Flyout>
                <ContextMenu>
                    <MenuItem Header="2024/25" />
                    <MenuItem Header="2025/26" />
                    <MenuItem Header="Send" />
                    <MenuItem Header="Hello" />
                </ContextMenu>
            </ui:DropDownButton.Flyout>
        </ui:DropDownButton>-->
        <ui:DataGrid ItemsSource="{Binding ViewModel.Classes}" 
                     SelectionMode="Single"
                     AutoGenerateColumns="False">
            <ui:DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>            
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </StackPanel>
</Page>
